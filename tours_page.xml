<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="990dp"
	android:background="#ffffffff">

	<LinearLayout
		android:layout_width="400dp"
		android:layout_height="10dp"
		android:orientation="vertical"
		android:padding="16dp">
		<ImageView
			android:layout_width="30.0dp"
			android:layout_height="32.5dp"
			android:id="@+id/back"
			android:src="@drawable/arrow"
			android:clickable="true"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="18dp"
			
/>
			<TextView
			android:id="@+id/destination_text"
			android:text="All tours"
			android:layout_width="384.0dp"
			android:layout_height="54.5dp"
			android:textColor="@android:color/background_dark"
			android:layout_centerHorizontal="true"
			android:textAlignment="center"
			android:textSize="30dp"
			android:textStyle="bold"
			android:layout_marginTop="-36dp"
/>
		<ImageView
			android:layout_width="406.8dp"
			android:layout_height="189.2dp"
			android:src="@drawable/fivedaysinindia"
			android:layout_marginLeft="-39dp"
			android:layout_marginTop="0dp"
			
/>
			<Button
			android:id="@id/india_Button"
			android:layout_width="132.4dp"
			android:layout_height="37.6dp"
			android:layout_marginLeft="167dp"
			android:layout_marginTop="-71dp"
			android:textStyle="bold"
			android:background="@android:color/transparent" 
/>
		<ImageView
			android:layout_width="406.8dp"
			android:layout_height="189.2dp"
			android:src="@drawable/aweekinegypt"
			android:layout_marginLeft="-39dp"
			android:layout_marginTop="0dp"
			
/>
			<Button
			android:id="@+id/egypt"
			android:layout_width="132.4dp"
			android:layout_height="37.6dp"
			android:layout_marginLeft="167dp"
			android:layout_marginTop="-71dp"
			android:textStyle="bold"
			android:background="@android:color/transparent" 
/>
			<ImageView
			android:layout_width="406.8dp"
			android:layout_height="189.2dp"
			android:src="@drawable/fairytalecities"
			android:layout_marginLeft="-39dp"
			android:layout_marginTop="0dp"
			
/>
			<Button
			android:id="@+id/fairytalebutton"
			android:layout_width="132.4dp"
			android:layout_height="37.6dp"
			android:layout_marginLeft="167dp"
			android:layout_marginTop="-71dp"
			android:textStyle="bold"
			android:background="@android:color/transparent" 
/>
			<ImageView
			android:layout_width="406.8dp"
			android:layout_height="189.2dp"
			android:src="@drawable/winefan"
			android:layout_marginLeft="-39dp"
			android:layout_marginTop="0dp"
			
/>
			<Button
			android:id="@+id/wine"
			android:layout_width="132.4dp"
			android:layout_height="37.6dp"
			android:layout_marginLeft="167dp"
			android:layout_marginTop="-71dp"
			android:textStyle="bold"
			android:background="@android:color/transparent" 
/>
			<ImageView
			android:layout_width="406.8dp"
			android:layout_height="189.2dp"
			android:src="@drawable/moutainseeker"
			android:layout_marginLeft="-39dp"
			android:layout_marginTop="0dp"
			
/>
			<Button
			android:id="@+id/mountains"
			android:layout_width="132.4dp"
			android:layout_height="37.6dp"
			android:layout_marginLeft="167dp"
			android:layout_marginTop="-71dp"
			android:textStyle="bold"
			android:background="@android:color/transparent" 
/>
		<ImageView
			android:layout_width="406.8dp"
			android:layout_height="189.2dp"
			android:src="@drawable/lazyholiday"
			android:layout_marginLeft="-39dp"
			android:layout_marginTop="0dp"
			
/>
			<Button
			android:id="@+id/holiday"
			android:layout_width="132.4dp"
			android:layout_height="37.6dp"
			android:layout_marginLeft="167dp"
			android:layout_marginTop="-71dp"
			android:textStyle="bold"
			android:background="@android:color/transparent" 
/>
		<TextView
			android:layout_width="282.0dp"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="Made by Andrii Yemchuk in 2025., Kyiv Ukraine"
			android:layout_alignParentBottom="true"
			android:paddingTop="40dp"
			android:layout_marginLeft="40dp"
			android:layout_marginTop="25dp"
			android:textAlignment="center" 
    />
</LinearLayout>
</ScrollView>