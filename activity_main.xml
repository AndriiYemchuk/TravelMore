<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffffff">

	<ImageView
		android:layout_height="wrap_content"
		android:layout_centerInParent="false"
		android:contentDescription="@android:string/copyUrl"
		android:layout_centerHorizontal="true"
		android:src="@drawable/welcome_to_travelmore"
		android:layout_width="297.0dp"
		android:layout_marginTop="65dp" 
		/>


	<TextView
		android:layout_width="230.0dp"
		android:layout_height="100px"
		android:text="Log into your account or create one"
		android:textColor="#ff000000"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="210dp"
		/>

	<EditText
		android:id="@+id/username"
		android:layout_width="307.0dp"
		android:layout_height="47.0dp"
		android:hint="Username"
		android:textColorHint="@android:color/black"
		android:textSize="14dp"
		android:paddingLeft="13dp"
		android:inputType="text"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="268dp"
		android:background="@drawable/edittext_border"
		/>
	<TextView
		android:id="@+id/user_star"
		android:layout_width="232.8dp"
		android:layout_height="33.0dp"
		android:text="You must enter you login*"
		android:textColor="@android:color/holo_red_dark"
		android:layout_centerHorizontal="false"
		android:layout_marginTop="240dp"
		android:textSize="14dp"
		android:layout_marginLeft="48dp"
		android:visibility="invisible"
		/>
	<EditText
		android:id="@id/password"
		android:layout_width="307.0dp"
		android:layout_height="47.0dp"
		android:hint="Password"
		android:textColorHint="@android:color/black"
		android:textSize="14dp"
		android:paddingLeft="13dp"
		android:inputType="textPassword"
		android:layout_marginTop="334dp"
		android:layout_centerHorizontal="true"
				android:background="@drawable/edittext_border"
		/>
		<TextView
		android:id="@id/password_star"
		android:layout_width="232.8dp"
		android:layout_height="33.0dp"
		android:text="You must enter you password*"
		android:textColor="@android:color/holo_red_dark"
		android:layout_centerHorizontal="false"
		android:layout_marginTop="314dp"
		android:textSize="14dp"
		android:layout_marginLeft="48dp"
		android:visibility="invisible"
		/>


	<Button
		android:id="@+id/loginButton"
		android:layout_width="307.0dp"
		android:layout_height="42.0dp"
		android:layout_marginLeft="64.0dp"
		android:layout_alignParentBottom="false"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="420dp"
		android:background="@drawable/button_border2"
		android:textColor="#ffebcc08"
		android:textStyle="bold"
		android:text="Log in"
		android:forceHasOverlappingRendering="false"
		android:drawableBottom="#ff000000"
		android:onClick="login"
		/>


	<TextView
		android:layout_width="232.0dp"
		android:layout_height="100px"
		android:text="Forgot password?"
		android:textColor="#ff000000"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="false"
		android:layout_centerInParent="false"
		android:foregroundGravity="center_horizontal"
		android:textAlignment="center"
		android:layout_marginTop="480dp" />


	<Button
		android:id="@+id/createButton"
		android:layout_width="307.0dp"
		android:layout_height="42.0dp"
		android:layout_marginLeft="36.0dp"
		android:layout_marginTop="540dp"
		android:background="@drawable/button_border"
		android:textColor="#ff000000"
		android:textStyle="normal"
		android:text="Create new account"
		android:forceHasOverlappingRendering="false"
		android:requiresFadingEdge="none"
		android:layout_centerHorizontal="true" 
		/>

	<TextView
		android:layout_width="274.5dp"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="Made by Andrii Yemchuk in 2025., Kyiv Ukraine"
		android:layout_alignParentBottom="true"
		android:paddingBottom="10px"
		android:textAlignment="center" 
    />
</RelativeLayout>