<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:background="@drawable/ticket_border"
    android:padding="19dp">

	<LinearLayout
		android:layout_width="109.6dp"
		android:layout_height="105.6dp"
		android:orientation="vertical"
		android:layout_marginLeft="0dp">

		<ImageView
			android:id="@+id/ticket_image"
			android:layout_width="100.0dp"
			android:layout_height="48.0dp"
			android:src="@drawable/flixbus"
			android:layout_marginLeft="0dp"
			android:layout_marginTop="-12dp"/>
		<ImageView
			android:id="@+id/transport"
			android:layout_width="46.4dp"
			android:layout_height="28.4dp"
			android:src="@drawable/bus"
			android:layout_marginEnd="8dp"
			android:layout_marginLeft="-8dp"
			android:layout_marginTop="10dp"/>
		<TextView
			android:id="@+id/date"
			android:text="Wed.11.06.2025"
			android:layout_width="99.2dp"
			android:layout_height="42.8dp"
			android:textStyle="bold"
			android:textSize="13sp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="11dp"
			android:textColor="@android:color/background_dark"
			android:textAlignment="center" />
	</LinearLayout>
	<TextView
		android:id="@+id/ticket_place"
		android:text="Ticket Title"
		android:layout_width="80.8dp"
		android:layout_height="30.4dp"
		android:textStyle="bold"
		android:textSize="17sp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="00dp"
		android:textColor="@android:color/background_dark"
		android:textAlignment="center" />
	<ImageView
		android:layout_width="35.6dp"
		android:layout_height="23.6dp"
		android:src="@drawable/arrow1"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="1dp"/>
	<TextView
		android:id="@+id/ticket_title"
		android:text="Ticket Title"
		android:layout_width="114.0dp"
		android:layout_height="30.4dp"
		android:textStyle="bold"
		android:textSize="17sp"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="00dp"
		android:textColor="@android:color/background_dark" />

	<TextView
		android:id="@+id/ticket_time"
		android:text="Departure"
		android:layout_width="78.8dp"
		android:layout_height="23.2dp"
		android:textSize="14sp"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="-270dp"
		android:textColor="@android:color/background_dark"
		android:textAlignment="textEnd" />
	<ImageView
		android:layout_width="38.4dp"
		android:layout_height="28.0dp"
		android:src="@drawable/line"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="40dp"/>
	<TextView
		android:id="@+id/ticket_duration"
		android:text="Duration"
		android:layout_width="76.8dp"
		android:layout_height="26.0dp"
		android:textSize="14sp"
		android:layout_marginLeft="-20dp"
		android:layout_marginTop="40dp"
		android:textColor="@android:color/background_dark"
		android:textAlignment="center" />
	<ImageView
		android:layout_width="40.0dp"
		android:layout_height="28.0dp"
		android:src="@drawable/line"
		android:layout_marginLeft="-20dp"
		android:layout_marginTop="40dp"/>
	<TextView
		android:id="@+id/ticket_arrival"
		android:text="Arrival"
		android:layout_width="52.8dp"
		android:layout_height="24.0dp"
		android:textSize="14sp"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="40dp"
		android:textColor="@android:color/background_dark" />
	<ImageView
		android:id="@+id/showticket1"
		android:layout_width="49.2dp"
		android:layout_height="45.6dp"
		android:src="@drawable/arrow2"
		android:layout_marginLeft="-60dp"
		android:layout_marginTop="80dp"
		android:clickable="true" />

</LinearLayout>